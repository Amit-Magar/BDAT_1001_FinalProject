@page
@model ContactManager.Pages.Contacts.DeleteModel

@{
    ViewData["Title"] = "DELETE CONTACT";
}

<div class="container mt-5">
    <!-- Page Title -->
    <h1 class="display-4 text-center mb-4">Delete Contact</h1>

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Are you sure you want to delete this?</h3>

            <!-- Contact Information Section -->
            <div>
                <h4>Contact Information</h4>
                <hr />
                <dl class="row">
                    <!-- Displaying various properties of the Contact model -->
                    <dt class="col-sm-2">Name</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Contact.Name)</dd>
                    <!-- ... Repeat similar blocks for other properties like Address, City, State, Zip, Email, and Status -->
                    <dt class="col-sm-2">Email</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Contact.Email)</dd>
                </dl>
            </div>

            <!-- Delete Form -->
            <form method="post" class="mt-3">
                <input type="hidden" asp-for="Contact.ContactId" />

                <div class="alert alert-danger" role="alert">
                    <strong>Warning!</strong> This action is irreversible.
                </div>

                <button type="submit" class="btn btn-danger">Delete</button> |
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
