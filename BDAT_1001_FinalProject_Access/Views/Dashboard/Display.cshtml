﻿@{
    string username = User.Identity.Name;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .welcome-container {
            background: linear-gradient(to right, #27ae60, #3498db); /* Use your desired colors */
            color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .admin-text {
            font-weight: bold;
            font-size: 1.2em;
            color: #ffd700; /* Change this to the desired color for the admin text */
        }
    </style>

    <title>Welcome Back Page</title>
</head>

<body>

    <div class="welcome-container">
        <p>Welcome Back <span class="username">@username</span>!!!</p>
    </div>

</body>

</html>



